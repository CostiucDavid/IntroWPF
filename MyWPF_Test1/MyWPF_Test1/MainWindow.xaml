        <Button x:Name="btnAnswer2" Background="DarkSalmon" FontSize="16" Click="CheckAnswer" Width="200" Height="50" Tag="0" Content="B" Canvas.Left="464" Canvas.Top="167"></Button>
        <Button x:Name="btnAnswer3" Background="DarkSalmon" FontSize="16" Click="CheckAnswer" Width="200" Height="50" Tag="0" Content="C" Canvas.Left="142" Canvas.Top="291"></Button>
        <Button x:Name="btnAnswer4" Background="DarkSalmon" FontSize="16" Click="CheckAnswer" Width="200" Height="50" Tag="0" Content="D" Canvas.Left="464" Canvas.Top="291"></Button>
    </Canvas>
</Window>

