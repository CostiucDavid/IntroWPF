<Window x:Class="MyWPF_Test1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWPF_Test1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="myGrid">
        <Label Content="Username" HorizontalAlignment="Left" Margin="71,59,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox HorizontalAlignment="Left" Margin="71,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="18"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="71,160,0,0" VerticalAlignment="Top" FontSize="18" Width="99"/>
        <PasswordBox HorizontalAlignment="Left" Margin="71,199,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Login Form" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="15"/>
        <Button Content="MyButton" HorizontalAlignment="Left" Margin="71,275,0,0" VerticalAlignment="Top" Height="35" Width="123" FontSize="16" Background="Aqua"/>

    </Grid>
</Window>

